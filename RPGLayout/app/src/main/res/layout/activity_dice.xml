<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.julius.rpglayout.Dice">

    <Button
        android:id="@+id/btn_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_10"

        android:layout_alignBottom="@+id/btn_10"
        android:layout_alignStart="@+id/txt_10"
        android:text="12" />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/btn_6"
        android:layout_below="@+id/btn_6"
        android:text="10" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/txt_6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="6" />

    <TextView
        android:id="@+id/txt_10"
        android:layout_width="143dp"
        android:layout_height="103dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"

        android:layout_alignBaseline="@+id/txt_6"
        android:layout_alignBottom="@+id/txt_6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/txt_12"
        android:layout_width="143dp"
        android:layout_height="103dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"

        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/txt_6" />

    <TextView
        android:id="@+id/all"
        android:layout_width="143dp"
        android:layout_height="103dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="143dp"
        android:layout_height="103dp"
        android:layout_alignBaseline="@+id/txt_12"
        android:layout_alignBottom="@+id/txt_12"
        android:layout_alignStart="@+id/txt_10"
        android:text="1"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_6"
        android:layout_width="143dp"
        android:layout_height="103dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"

        android:layout_marginStart="32dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all"
        android:layout_toEndOf="@+id/btn_dice"
        android:text="20 Sides" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_6"
        android:layout_centerVertical="true"
        android:layout_marginEnd="36dp"
        android:text="6 Sides" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/txt_10"
        android:text="10 Sides" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/txt_12"
        android:text="12 Sides" />
</RelativeLayout>
