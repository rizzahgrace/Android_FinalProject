<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.julius.rpglayout.Dice">

    <TextView
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="100sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/all"
        android:layout_marginStart="51dp"
        android:layout_marginTop="35dp"
        android:text="4" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_alignBaseline="@+id/btn_4"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp" />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="10"
        android:layout_below="@+id/btn_4"
        android:layout_alignStart="@+id/btn_4" />

    <Button
        android:id="@+id/btn_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_10"
        android:layout_alignStart="@+id/btn_6"
        android:text="12" />

    <Button
        android:id="@+id/btn_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_10"
        android:layout_below="@+id/btn_10"
        android:layout_marginTop="18dp"
        android:text="20" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_20"
        android:layout_alignBottom="@+id/btn_20"
        android:layout_alignStart="@+id/btn_12"
        android:text="0/1" />

</RelativeLayout>
