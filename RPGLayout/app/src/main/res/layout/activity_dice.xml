<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.julius.rpglayout.Dice">

    <TextView
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="19dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="100sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/all"
        android:layout_marginStart="51dp"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:text="4" />

    <Button
        android:id="@+id/btn_6"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="6"
        android:layout_alignBaseline="@+id/btn_4"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp" />

    <Button
        android:id="@+id/btn_10"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textColor="#000000"
        android:text="10"
        android:layout_below="@+id/btn_4"
        android:layout_alignStart="@+id/btn_4" />

    <Button
        android:id="@+id/btn_12"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_10"
        android:layout_alignStart="@+id/btn_6"
        android:textColor="#000000"
        android:text="12" />

    <Button
        android:id="@+id/btn_20"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_10"
        android:layout_below="@+id/btn_10"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:text="20" />

    <Button
        android:id="@+id/btn_0"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_20"
        android:layout_alignBottom="@+id/btn_20"
        android:textColor="#000000"
        android:layout_alignStart="@+id/btn_12"
        android:text="0/1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_blue_dark"
        android:text="DICE"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn_home"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:background="@android:color/holo_green_dark"
        android:text="HOME" />

</RelativeLayout>
