<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.julius.rpglayout.BackStory">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="31dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="347dp"
        android:layout_height="328dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteY="77dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_nextr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="434dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText6"
        android:layout_alignEnd="@+id/editText6"
        android:layout_marginEnd="55dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_nextr"
        android:layout_marginEnd="41dp"
        android:layout_toStartOf="@+id/btn_nextr"
        android:text="Previous" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rpg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
